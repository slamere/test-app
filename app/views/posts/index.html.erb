<h1> All Posts </h1>

<%= button_to 'Add Post', new_post_path, :method => :get %>
<ul>
  <% for post in @posts %>
    <li>
      <%= post.title %>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Remove', post_path(post, :method => :delete, :confirm => "Are you sure?") %>
    </li>
  <% end %>
</ul>